<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_marginTop="-67dp"
        android:src="@drawable/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textSize="30dp"
            android:textColor="#986633"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="Please enter your email to reset your account."/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_margin="14dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:elevation="6dp"
        android:paddingStart="8dp"
        android:id="@+id/forgetpassword_email"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foot"
            android:layout_marginBottom="-70dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:elevation="10dp"
                android:textAllCaps="false"
                android:text="Save"
                app:shapeAppearanceOverlay="@style/Button_Login"
                android:backgroundTint="#DEB68B"
                android:height="55dp"
                android:id="@+id/forgetpassword_button"

                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>