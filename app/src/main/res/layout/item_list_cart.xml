<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_count_layout"
            android:layout_width="40dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/cart_count_border"
            android:gravity="center"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/increase_cart_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="#878787"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="+"/>

            <TextView
                android:id="@+id/cart_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/decrease_card_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="#878787"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="-"/>

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cart_image"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher"
            android:padding="6dp"
            android:layout_marginLeft="6dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/imageRound"
            app:layout_constraintStart_toEndOf="@id/button_count_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cart_price"
            app:layout_constraintStart_toEndOf="@+id/cart_image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_title"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="Subtitle" />

        </RelativeLayout>

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="$ 1.00"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/darkbrown"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>